<!DOCTYPE html>

<head>
    <title>{{timelineADMU}}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="style1.css">
    <link rel="stylesheet" type="text/css" href="homepagestyle.css">
    <link rel="icon" href="logo.png">
    <script src="https://kit.fontawesome.com/080b1bc218.js" crossorigin="anonymous"></script>
</head>

<body>
    {{>header}}

    <div class="container-fluid text-center">
            <div class="row content line-nav">
                <div class="col-sm-2 sidenav">
                    {{>sideProfile}}
                </div>
                <div class="center-post">
                    <div class="col-sm-8 text-left">
                        {{>createPost}}
                        
                        <hr>

                        <ul class="timeline">
                            <li class="timeline-inverted">
                                <div class="timeline-badge up">&#128047</div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <div class="postNum">{{postNumber}}</div>
                                        <h4 class="timeline-title">{{postTitle}}</h4>
                                        <div class ="dropdown">
                                            <img src="option.png" style="height: 20px; width: 23px; padding-right: 5px;" id="option1" title="Option">
                                            <div class="dropdown-content">
                                                <a href="#">Save Post</a>
                                            </div>
                                        </div>
                                    </div>
                                    <span class="timeline-author">
                                        <div class="author"> By: {{Username}} </div>
                                        <div class="userCreditScoree">({{CreditScore}})</div>
                                    </span>
                                    <div class="timeline-body">
                                        <p>{{postBody}}</p>
                                    </div>
                                    <div class="userTagss" title="Tags">
                                        <span>Tags: {{postTags}}</span>
                                    </div>
                                    <hr>
                                    <div class="userbuttonscontainerr">
                                        <div class="upvotecountt" title="Upvote Count"><p>{{Upvotes}}</p></div>                    
                                        <div class="upvote"><img src="upvote.png" id="upvote3" onclick="toggleUpvote(this)" title="Upvote"></div>
                                        <div class="downvote"><img src="downvote.png" id="downvote3" onclick="toggleDownvote(this)" title="Downvote"></div>
                                        <div class="comment"> <img src="comment.png" style="height: 48px; width: 47px; margin-left: -3px;" id="comment3" title="Comment"></div>
                                    </div>  
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                {{>trending}}
            </div>
        </div>
</body>

</html>