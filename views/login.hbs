<body>
    <div class = "template">
        <div class="scope">
            <div class = "header">
                <a class="logo" href="/" tabindex="-1" title="B4FW"></a>
            </div>
        </div>
        
    </div>
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <span id="login-continue" class="h5">To continue, log in to Freedom Wall.</span>
                </div>
            </div>
            {{!-- <div class="row">
                <div class="col-xs-12" style="margin-left: 180px; margin-top: 10px; margin-bottom: 20px;">
