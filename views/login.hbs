            <form id="login" method="POST" class="form-login">
                <div class="row">
                    <div class="col-xs-12">
                        <label for="login-username" class="for-forms">
                            Email address or username
                        </label>
                        <input type="text" class="form-control" name="username" id="login-username" placeholder="Email address or username" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <label for="login-password" class="for-forms">
                            Password
                        </label>
                        <input type="password" class="form-control" name="password" id="login-password" placeholder="Password" required>
                    </div>
                </div>
                <div class="row row-submit">
                    <div class="col-xs-12">
                        <div class="loginbuttonblock">
                            <input type="submit" id="loginbutton" value="LOG-IN">
                        </div>
                    </div>
                </div> 
            </form>
            <div class="row">
                <div id="error" style="margin-left: 165px; color: red; font-size:16px; font-weight:600;"></div>
                <div class="col-xs-12">
                    <div class="divider"></div>
                    <div class="col-xs-12 text-center">
                        <span id="account-continue" class="h3">Don't have an account?</span>
                    </div>

                    <div class="row row-submit">
                        <div class="col-xs-12">
                            <a href="" class="btn btn-block btn-grey signup sign"><i class="fas fa-sign-in-alt"></i> SIGN UP NOW! </a>
                        </div>
                    </div>

                    <p class="text-center text-muted footer">Big Four: Freedom Wall</p>
                </div>
            </div>
        </div> 
    </div>
</body>     


