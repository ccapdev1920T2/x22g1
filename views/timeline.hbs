<!DOCTYPE html>

    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/css/style1.css">
        <link rel="stylesheet" type="text/css" href="/css/homepagestyle.css">
        <link rel="icon" href="/img/logo.png">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        {{!-- <script src="/js/timeline.js" type="text/javascript"></script>
        <script src="/js/votes.js" type="text/javascript"></script> --}}
        <script src="https://kit.fontawesome.com/080b1bc218.js" crossorigin="anonymous"></script>
    </head>

    <body>
        {{!-- {{>header DisplayName = DisplayName navbar = navbar}} --}}
        <nav class="navbar navbar-inverse navbar-fixed-top {{navbar}}">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/timeline">BIG FOUR: Freedom Wall</a>
                </div>
                <form class="navbar-form navbar-left" action="/action_page.php">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" name="search">
                        <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                        <i class="fas fa-search"></i>
                        </button>
                        </div>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/timeline"><i class="fas fa-home"></i> HOME</a></li>
                    <li><a href="/timeline/admu">&#x1f985 ADMU</a></li>
                    <li><a href="/timeline/dlsu">&#127993 DLSU</a></li>
                    <li><a href="/timeline/up">&#9994 UP</a></li>
                    <li><a href="/timeline/ust">&#128047 UST</a></li>
                        <div class="dropdown prof">
                            <li><a href="/profile/{{user._id}}" class="dropbtn" style="color:white; font-size:14px; border: 1px solid white; margin-right: 10px;" title="Go to Profile"><i class="far fa-user"></i> PROFILE</a></li>
                            <div class="dropdown-content">
                                <a href="/logout">Log out</a>
                            </div>
                        </div>
                </ul>
            </div>
        </nav>
        <div class="container-fluid text-center">
            <div class="row content line-nav">
                <div class="col-sm-2 sidenav" id="sideprofile" style="margin-left: -20px;">
                    {{!-- {{>sideProfile fName = fn lName = ln CreditScore = cs DisplayName = DisplayName DisplayPicture = image}} --}}
                    <div class="col-sm-2 sidenav">
                        <div class="content-sidenav">
                            <a href="/profile/{{user._id}}"><img class="img-circle" src="/img/{{user.avatar}}"/> </a>
                                <div class="rank-label-container">
                                    <span class="label label-default rank-label" title="Credit Score" style="cursor:default;">{{user.creditScore}} pts</span>
                                </div>
                            <p class="p-name">{{user.fName}} {{user.lName}}</p>
                            <p class="p-name" style="font-size: 13px; margin-top: -20px; font-family:Arial, Helvetica, sans-serif; font-style: italic; text-align: center" id="DisplayName">@{{user.username}}</p>
                        </div>
                    </div>
                </div>
                <div class="center-post">
                    <div class="col-sm-8 text-left">
                        {{!-- {{>createPost}} --}}
                        <div class="box-creating">
                            <div class="creating">
                                <span class="create-post">
                                    <span class="post">Create Post</span>
                                </span>
                            </div>
                        </div>

                        <form name="createPost" method="POST" action="/createpost">
                            <div class="post-text">
                                <div class="whole-post">
                                    <div class="post-pic">
                                        <a class="pic" href="/profile/{{DisplayName}}">
                                            <img class="img" src="/img/{{user.avatar}}" height="40" width="40" alt>
                                        </a>
                                    </div>
                                    <div class="actual-text">
                                        <div class="box-text">
                                            <div class="box-title">
                                                <div class="text-area">
                                                    <textarea name="title" id="title" class="post-area-title" placeholder="Title of your post">{{input.title}}</textarea>
                                                </div>
                                                <p style="color: red; margin-top: -5px; margin-bottom: 2px; font-size: 10px"> 
                                                    {{details.titleError}}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="box-text">
                                            <div class="box">
                                                <div class="text-area">                                  
                                                    <textarea name="body" id="body" class="post-area" placeholder="Any story to tell?">{{input.body}}</textarea>                                                  
                                                </div>
                                                 <p style="color: red; margin-top: -5px; margin-bottom: 2px; font-size: 10px"> 
                                                    {{details.bodyError}}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="box-text">
                                            <div class="box-tags">
                                                <div class="text-area">                                                  
                                                    <input type="text" name="tags" id="tags" class="post-area-tags" placeholder="#Tags (Separate your tags with comma)" value="{{input.tags}}" autocomplete="off"></input>                                             
                                                </div>
                                                 <p style="color: red; margin-top: -5px; margin-bottom: 2px; font-size: 10px"> 
                                                    {{details.tagsError}}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="buttons-post">
                                            <div class="buttons-post2">
                                                <ul class="buttons-post-icons">
                                                    <li class="media-button">
                                                        <div class="media-icon">
                                                            <span class="media-span">
                                                                <div class="media-pic"style="border: 1px solid gray">
                                                                <div class="media-text">
                                                                    <form action="/uploadPhoto" enctype="multipart/form-data" method="POST"> 
                                                                        <label for="upload" style="cursor:pointer">
                                                                            <i class="far fa-images"></i> 
                                                                            Photo
                                                                            <input id="upload" type="file" accept="image/*" style="display: none;">
                                                                        </label>
                                                                    </form>
                                                                </div>
                                                                </div>
                                                            </span>
                                                        </div>
                                                    </li>
                                                    <li class="media-button">
                                                        <div class="media-icon">
                                                            <span class="media-span">
                                                            <div class="media-pic" style="border: 1px solid gray">
                                                                <div class="dropdown">
                                                                    {{!-- <div class="media-text"><i class="fas fa-filter"></i>UniFilter</div> --}}
                                                                        {{!-- <div class="dropdown-content-uni"> --}}
                                                                            <div class = "media-text"> <i class="fas fa-filter"></i>
                                                                                <select id="universities" name="university" style="border: none; background-color: rgba(126, 125, 125, 0); cursor:pointer">
                                                                                    {{!-- <option value="&#x1f985">ADMU</option>
                                                                                    <option value="&#127993">DLSU</option>
                                                                                    <option value="&#9994">UP</option>
                                                                                    <option value="&#128047">UST</option> --}}
                                                                                    <option value="ADMU">ADMU</option>
                                                                                    <option value="DLSU">DLSU</option>
                                                                                    <option value="UP">UP</option>
                                                                                    <option value="UST">UST</option> 
                                                                                </select>
                                                                            </div>
                                                                        {{!-- </div> --}}
                                                                </div>
                                                            </div>
                                                            </span>
                                                        </div>
                                                    </li>
                                                    <li class="media-button-timeline" style="margin-left: 255px;">
                                                        <div class="media-icon">
                                                            <span class="media-span">
                                                                <div class="media-pic" id="pbutton">
                                                                    <div class = "media-text">
                                                                        <i class="far fa-edit"></i><button type="submit" id="postbutton" style="background-color: rgba(255, 255, 255, 0.007); border: none;">Post</button>
                                                                    </div>
                                                                </div>
                                                            </span>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <hr>
                        <div id="post">
                            {{#each posts}}
                                {{>post university = this.university}}
                            {{/each}}
                             {{!-- {{#if _id}}
                                    {{>post}}
                                {{/if}} --}}
                        </div>
                    </div>
                </div>
                {{>trending}}
            </div>
        </div>
    </body>

</html>