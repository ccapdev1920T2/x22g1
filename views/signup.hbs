<!DOCTYPE html>

<head>
    <title> Sign Up | B4 Freedom Wall</title>
    <meta name="google-signin-client_id" content="436134069770-8noeso15h66pmn94790jkskieq3a3jl5.apps.googleusercontent.com">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="icon" href="/img/logo.png">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
     {{!-- <script src="/js/signup.js" type="text/javascript"></script> --}}
    <script src="https://kit.fontawesome.com/080b1bc218.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class = "template">
        <div class="scope">
            <div class = "header">
                <a class="logo" href="/" tabindex="-1" title="B4FW"></a>
            </div>
        </div>
        
    </div>
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <span id="login-continue" class="h5">Sign up</span>
                </div>
            </div>
        
            <form name="signUp" method="POST" class="form-login">
                <div class="row">
                    <label>Profile Photo</label><br />
                    <div class="container form-upload"
                        style="justify-content: center; align-items: center; text-align: center;">
                        <img class="img-circle" id="output" src="/img/portrait.png" style="margin-left: 2px;" />
                        <div>
                            <div class="col" style="padding-left: 90px;">
                                <p class="mx-auto w-100">
                                    <input type="file" id="avatar" name="avatar" accept="image/jpeg, image/png"
                                        value="{{input.avatar}}"
                                        onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label for="register-email">Email</label><br />
                    <div class="col-xs-12">
                        <input type="email" class="form-control" name="email" id="register-email" placeholder="Email address" value="{{input.email}}">
                    </div>
                </div>
                <div class="row">
                    <label>Password</label><br />
                    <div class="col-xs-12">
                        <input type="password" class="form-control" name="password" id="register-password" placeholder="Password">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <input type="password" class="form-control" name="passwordConfirm" id="register-password-recheck" placeholder="Confirm Password">
                    </div>
                </div>
                <div class="row">
                    <label>First Name</label><br />
                    <div class="col-xs-12">
                        <input type="text" class="form-control" name="fName" id="register-fName" placeholder="First Name" value="{{input.fName}}"> 
                    </div>
                </div>
                <div class="row">
                    <label>Last Name</label><br />
                    <div class="col-xs-12">
                        <input type="text" class="form-control" name="lName" id="register-lName" placeholder="Last Name" value="{{input.lName}}">
                    </div>
                </div>
                <div class="row">
                    <label>Username</label><br />
                    <div class="col-xs-12">
                        <input type="text" class="form-control" name="username" id="register-username" placeholder="What should we call you?">
                    </div>
                </div>
                <div class="row row-submit">
                    <div class="col-xs-12">
                        <div class="loginbuttonblock">
                            <button type="submit" id="loginbutton">SIGN-UP</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div id="error" style="margin-left: 165px; color: red; font-size:16px; font-weight:600;"></div>
                <div class="col-xs-12">
                    <div class="divider"></div>
                    <p class="text-center text-muted footer">Big Four: Freedom Wall</p>
                </div>
            </div>
        </div> 
    </div>
</body>     


</html>     