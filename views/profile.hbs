                    <div class="headertext">
                        <p>User Profile</p>
                    </div>
                    <div class="profile-header-container">   
                        <div class="profile-header-img">
                            <img class="img-circle" src="/img/{{user.avatar}}" />
                            <div class="rank-label-container">
                                <span class="label label-default rank-label" title="Credit Score">{{user.creditScore}} pts</span>
                            </div>
                        </div>
                        <div class="user-info-block">
                            <div class="user-heading">
                                <h3>{{user.fName}} {{user.lName}} <a href="" data-toggle="modal" data-target="#modalEdit"><i class="fas fa-user-edit fa-xs" title="Edit Profile" style="color: gray; margin-top: 10px; font-size: 20px"></i></a></h3>
                                 <p class="p-name" style="font-size: 13px; margin-top: -20px; font-family:Arial, Helvetica, sans-serif; font-style: italic; text-align: center" id="DisplayName">@{{user.username}}</p>
