<!-- Modal -->
<div class="modal fade border" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" role="document" style="width: 600px">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><strong>Edit Profile</strong></h4>
      </div>
      <div class="modal-body pb-0 mb-0">
        <!-- use method="post" to send your form to server -->
        <form class="form-horizontal" id="clinicProfile" method="post" action="/updateClinicProfile">

            <div class="form-group" style="margin-left: 15px;">
                <p style="margin-left: 15px;"><strong>Profile Photo</strong></p>
                    <div class="container form-upload"
                        style="justify-content: center; align-items: center; text-align: center;">
                        <img class="img-circle" id="output" src="/img/portrait.png" style="margin-left: -700px;" />
                        <div>
                            <div class="col" style="padding-left: 130px; padding-top: 10px">
                                <p class="mx-auto w-100">
                                    <input type="file" id="avatar" name="avatar" accept="image/jpeg, image/png"
                                        value="{{input.avatar}}"
                                        onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />
                                </p>
                            </div>
                        </div>
                    </div>
            </div>
            
             <div class="form-group" style="margin-left: 15px;">
                <div class="col-xs-11">  
                    <p><strong>Username</strong></p>
                    <input type="text" class="form-control" id="clinic_phone" name="clinic_phone" placeholder="{{profileData.phone}}" required/>
                </div>
                <div class="col-sm-7"></div>
            </div>

            <div class="form-group" style="margin-left: 15px;">
                <div class="col-xs-11">  
                    <p><strong>First Name</strong></p>
                    <input type="text" class="form-control" id="clinic_email" name="clinic_email" placeholder="{{profileData.clinicContactEmails.[0]}}" required/>
                </div>
                
                <div class="col-sm-7"></div>
            </div>

            <div class="form-group" style="margin-left: 15px;">
                <div class="col-xs-11">  
                    <p><strong>Last Name</strong></p>
                    <input type="text" class="form-control" id="clinic_phone" name="clinic_phone" placeholder="{{profileData.phone}}" required/>
                </div>
                <div class="col-sm-7"></div>
            </div>

            <div class="form-group" style="margin-left: 15px;">
                <div class="col-xs-11">  
                    <p><strong>Bio</strong></p>
                    <input type="text" class="form-control" id="clinic_phone" name="clinic_phone" placeholder="{{profileData.phone}}" required/>
                </div>
                <div class="col-sm-7"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" >Discard Changes</button>
                <button type="submit" class="btn btn-primary" id="saveBtn">Save</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
