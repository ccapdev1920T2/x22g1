<!DOCTYPE html>
<html>
    <head>
        <title>{{fName}} {{lName}} | Profile</title>
        <meta name="description" content="User Profile">
        <meta name="keyword" content="profile,name,user information">
        <link href="/css/profilestyle.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/css/style1.css">   
        <link rel="stylesheet" type="text/css" href="/css/homepagestyle.css">
        <link rel="icon" href="/img/logo.png">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="/js/timeline.js" type="text/javascript"></script>
        <script src="/js/profile.js" type="text/javascript"></script>
        <script src="https://kit.fontawesome.com/080b1bc218.js" crossorigin="anonymous"></script>
    </head>

    <body>

        {{!-- do the header separate --}}
        {{>header DisplayName = DisplayName}}
        {{>userProfile fName = fn lName = ln Bio = bio DisplayPicture = image CreditScore = cs}}
        <div id="buttoncontainer">
            <div class="button1">
                <button class="tablinks" id="Recent_Post" title="Recent Posts" >Recent Posts</button>
            </div>
            <div class="button2">
                <button class="tablinks" id="Saved_Post" title="Saved Posts">Saved Posts</button>
            </div>
        </div>

        <div class="center-post" style="margin-left: 200px;">
            <div class="col-sm-8 text-left" style="margin-left: 70px;">
                <div id="RecentPost" class="tabcontent">
                    <hr>
                    {{#each posts}}
                            {{#if postNumber}}
                            <ul class="timeline">
                                <li class="timeline-inverted">
                                    <div class="{{timelineBadge}}">{{{uniBadge}}}</div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">
                                                <a href="indivPost?_id={{_id}}&DisplayName={{Username}}" style="color: rgb(78, 73, 73);" target="_blank">{{postTitle}}</a>
                                            </h4>
                                            <div class ="dropdown">
                                                <img src="/img/option.png" style="height: 20px; width: 23px; padding-right: 5px;" id="option1" title="Option">
                                                <div class="dropdown-content">
                                                    <a href="#">Save Post</a>
                                                    <a href="#">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                        <span class="timeline-author">
                                            <div class="author">  
                                                <a class="a-link" href="/profile/{{Username}}" target="_blank">By: {{Username}}</a>
                                            </div>
                                            <div class="userCreditScoree">({{CreditScore}} pts)</div>
                                        </span>
                                        <div class="timeline-body">
                                            <p>{{postBody}}</p>
                                        </div>
                                        <div class="userTagss" title="Tags">
                                            <span>
                                                <a class="a-link" href="indivpost.html">Tags: {{postTags}}</a>
                                            </span>
                                        </div>
                                        <hr>
                                        <div class="userbuttonscontainerr">
                                            <p class ="upvotecountt" id="upvotecount" title="Upvote Count">{{Upvotes}} upvotes</p>
                                                {{!-- <p id="counter"></p>                 --}}
                                            <img src="/img/upvote.png" id="upvote" title="Upvote" class="upvote">
                                            <img src="/img/downvote.png" id="downvote" title="Downvote" class="downvote">
                                            <img src="/img/comment.png" style="height: 43px; width: 47px; margin-left: -3px;" id="comment" class="comment" title="Comment">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            {{/if}}
                        {{/each}}
                </div>
                 <div id="SavedPost" class="tabcontent">

                 </div>
            </div>
        </div>
    </body>
</html>